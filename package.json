{
  "name": "backoffice",
  "type": "module",
  "version": "1.0.0",
  "description": "OneWeb Backoffice API Services",
  "main": "src/index.js",
  "author": "Jim Zhan <jim.zhan@me.com>",
  "license": "Apache-2.0",
  "scripts": {
    "db:init": "npm run db:sync && npm run db:seed",
    "db:sync": "knex migrate:latest",
    "db:new": "knex migrate:make",
    "db:up": "knex migrate:up",
    "db:down": "knex migrate:down",
    "db:seed": "knex seed:run",
    "db:rollback": "knex migrate:rollback",
    "infra:up": "docker-compose --file infra/docker-compose.yml up -d",
    "infra:stop": "docker-compose --file infra/docker-compose.yml stop",
    "lint": "eslint --fix --ignore-path .eslintignore",
    "start": "cross-env NODE_ENV=production node src/index.js",
    "watch": "cross-env NODE_ENV=development NODE_CONFIG_ENV=localhost nodemon src/index.js",
    "pretest": "cross-env NODE_ENV=test npm run db:init",
    "test": "vitest run --coverage --pool=forks"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/catbox": "^12.1.1",
    "@hapi/catbox-redis": "^7.0.2",
    "@hapi/glue": "^9.0.1",
    "@hapi/hapi": "^21.3.10",
    "@hapi/yar": "^11.0.2",
    "argon2": "^0.40.3",
    "bson": "^6.8.0",
    "config": "^3.3.12",
    "cross-env": "^7.0.3",
    "exiting": "^7.0.0",
    "hapi-pino": "^12.1.0",
    "http-status": "^1.7.4",
    "i18next": "^23.12.2",
    "i18next-fs-backend": "^2.3.2",
    "i18next-http-middleware": "^3.6.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "kafkajs": "^2.2.4",
    "knex": "^3.1.0",
    "nanoid": "^5.0.7",
    "objection": "^3.1.4",
    "url-join": "^5.0.0"
  },
  "devDependencies": {
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "@vitest/coverage-istanbul": "^2.0.4",
    "better-sqlite3": "^11.1.2",
    "cookie": "^0.6.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.10.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.0.0",
    "hapi-swagger": "^17.2.1",
    "husky": "^9.1.4",
    "inert": "^5.1.3",
    "ioredis-mock": "^8.9.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "vitest": "^2.0.4"
  }
}
